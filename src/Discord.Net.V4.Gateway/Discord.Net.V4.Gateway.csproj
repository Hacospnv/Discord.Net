<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>12.0</LangVersion>
    <Nullable>enable</Nullable>
    <WarningLevel>9999</WarningLevel>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <IsAotCompatible>false</IsAotCompatible>
    <RootNamespace>Discord.Gateway</RootNamespace>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Discord.Net.V4.Core\Discord.Net.V4.Core.csproj" />
    <ProjectReference Include="..\Discord.Net.V4.Rest\Discord.Net.V4.Rest.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Entities\Stickers\" />
    <None Remove="Cache\CacheProviders\" />
    <None Remove="Connections\" />
    <None Remove="API\" />
    <None Remove="API\Gateway\" />
    <None Remove="Utils\" />
    <None Remove="Connections\WebSocket\" />
    <None Remove="EventProcessors\" />
    <None Remove="GatwayEncoding\" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Entities\Stickers\" />
    <Folder Include="Cache\CacheProviders\" />
    <Folder Include="Connections\" />
    <Folder Include="API\" />
    <Folder Include="API\Gateway\" />
    <Folder Include="Utils\" />
    <Folder Include="Connections\WebSocket\" />
    <Folder Include="EventProcessors\" />
    <Folder Include="GatwayEncoding\" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="8.0.0" />
  </ItemGroup>
</Project>
